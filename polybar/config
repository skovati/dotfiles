[colors]
;Background (Black-ish)
BKGD =${xrdb:background:#222}

;Foreground (White-ish)
FRGD =${xrdb:foreground:#222}

;color0
color0 =${xrdb:color0:#222}

;color1
color1 =${xrdb:color1:#222}

;color2
color2 =${xrdb:color2:#222}

;color3
color3 =${xrdb:color3:#222}

;color4
color4 =${xrdb:color4:#222}

;color5
color5 =${xrdb:color5:#222}

;color6
color6 =${xrdb:color6:#222}

;color7
color7 =${xrdb:color7:#222}

;color8
color8 =${xrdb:color8:#222}

;color9
color9 =${xrdb:color9:#222}

[bar/bar]
;Change this to match monitor, find via xrandr -q
monitor = DP-4
;These will have to be adjusted to set position and size of main bar
width = 2560
height = 28
offset-x = 0
offset-y = 0 
radius = 0
fixed-center = true
enable-ipc = true

background = ${colors.BKGD}
foreground = ${colors.FRGD}

line-size = 3
line-color = #f00

border-size = 0 
border-color = ${colors.FRGD}

#real font declaration here
font-0 = "tamzen :size=14;1"
font-1 = "RobotoMono Nerd Font"
padding-left = 0
padding-right = 0 

module-margin-left = 0
module-margin-right = 

modules-left = i3
modules-center = spotify mpd
modules-right = ip mem cpu temperature pulseaudio date powermenu

separator =  

;tray-position = right
;tray-padding = 2
;tray-transparent = true
;tray-background = #0063ff

# wm-restack = bspwm
wm-restack = i3

override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
;cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%
label-foreground = ${colors.FRGD}

[bar/mybar]
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/i3]
type = internal/i3

; Only show workspaces defined on the same output as the bar
;
; Useful if you want to show monitor specific workspaces
; on different bars
;
; Default: false
pin-workspaces = true

; This will split the workspace name on ':'
; Default: false
strip-wsnumbers = true

; Sort the workspaces by index instead of the default
; sorting that groups the workspaces by output
; Default: false
index-sort = true

; Create click handler used to focus workspace
; Default: true
# enable-click = false

; Create scroll handlers used to cycle workspaces
; Default: true
enable-scroll = false

; Wrap around when reaching the first/last workspace
; Default: true
wrapping-scroll = false

; Set the scroll cycle direction 
; Default: true
#label-focused-foreground = ${colors.BKGD}
label-focused-underline = ${colors.color2}
reverse-scroll = false
label-focused-padding = 1
label-unfocused-padding = 1
label-focused = %index%
label-unfocused = %index% 

[module/cpu]
type = internal/cpu
interval = 2
format-prefix =
format-suffix = 
format-underline = ${colors.color7}
format-foreground = ${colors.FRGD}
label = " CPU %percentage%% "

#[module/freq]
#type = custom/script
#exec = mhz
#interval = 9 
#format-##underline = ${colors.DKGN}

#[module/memory]
#type = internal/memory
#interval = 2
#format-prefix = 
#format-suffix = 
#format-underline = ${colors.color1}
#format-foreground = ${colors.FRGD}
#label = "%mb_used% "

[module/mem]
type = custom/script
exec = free -m | grep Mem: | cut -f 2 -d ":" | awk '{$1=$1};1' | cut -f 2 -d " "
interval = 1
label = " %output% MB "
format-underline = ${colors.color1}
format-foreground = ${colors.FRGD}

[module/date]
type = internal/date
interval = 1

date =
date-alt = " %m/%d/%y"

time = " %l:%M:%S"
time-alt = 

format-prefix = 
format-prefix-background = ${colors.BKGD}
format-prefix-foreground = ${colors.FRGD}
format-underline = ${colors.color4}
format-foreground = ${colors.FRGD}

label = "%date%%time% "

[module/pulseaudio]
type = internal/pulseaudio

; Sink to be used, if it exists (find using `pacmd list-sinks`, name field)
; If not, uses default sink
sink = alsa_output.pci-0000_08_00.4.analog-stereo

click-right = exec pavucontrol &

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
; Default: true
use-ui-max = true
format-volume-underline = ${colors.color8}


; Interval for volume increase/decrease (in percent points)
; Default: 5
interval = 5

[module/temperature]
type = internal/temperature

; Seconds to sleep between updates
; Default: 1
interval = 1

; Thermal zone to use
; To list all the zone types, run 
; $ for i in /sys/class/thermal/thermal_zone*; do echo "$i: $(<$i/type)"; done
; Default: 0
thermal-zone = 0
label = " %temperature-c% "

; Full path of temperature sysfs path
; Use `sensors` to find preferred temperature source, then run
; $ for i in /sys/class/hwmon/hwmon*/temp*_input; do echo "$(<$(dirname $i)/name): $(cat ${i%_*}_label 2>/dev/null || echo $(basename ${i%_*})) $(readlink -f $i)"; done
; to find path to desired file
; Default reverts to thermal zone setting
hwmon-path = /sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon0/temp1_input
format-underline = ${colors.color3}

[module/spotify]
type = custom/script
interval = 1 
#format-prefix = "U+1F3B5 "
format = <label>
exec = python /home/skovati/code/scripts/spotify.sh -f '{artist}: {song}' -t 40
format-underline = ${colors.color5}

[module/vpn]
type = custom/script
exec = nordvpn status | grep Status | cut -f 2 -d " " | cut -c 1
interval = 1
label = "VPN: %output% "
format-underline = ${colors.color8}

[module/ip]
type = custom/script
exec = curl -s ifconfig.io
interval = 1
format-underline = ${colors.color8}

[module/powermenu]
type = custom/menu

expand-right = false

format-spacing = 1

label-open = " # " 
label-open-foreground = ${colors.FRGD}
label-close-underline = ${colors.color9}
label-open-underline = ${colors.color9}
label-close = " # "
label-close-foreground = ${colors.FRGD}
label-separator = |
label-separator-foreground = ${colors.FRGD}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = reboot
menu-1-0-exec = reboot
menu-1-1 = cancel
menu-1-1-exec = menu-open-0

menu-2-0 = power off
menu-2-0-exec = shutdown now
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/mpd]
type = internal/mpd

; Host where mpd is running (either ip or domain name)
; Can also be the full path to a unix socket where mpd is running.
host = 127.0.0.1
port = 6600

; Seconds to sleep between progressbar/song timer sync
; Default: 1
interval = 1
format-online = <label-song>
label-song = %artist% - %title%
bar-progress-width = 45
bar-progress-indicator = |
bar-progress-fill = -
bar-progress-empty = _
format-underline = ${colors.color5}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 0
margin-bottom = 0
